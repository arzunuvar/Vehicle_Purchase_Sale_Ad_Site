{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profile{% endblock %}

{% block body %}
    <div class="responsive-menu">
        <a href="" class="responsive-menu-close"><i class="ion-android-close"></i></a>
        <nav class="responsive-nav"></nav> <!-- end .responsive-nav -->
    </div> <!-- end .responsive-menu -->
    <div class="page-title" style="background-image: url('{{ asset('assets') }}/images/background01.jpg');">
        <div class="inner">
            <div class="container">
                <div class="title">Blog Page</div> <!-- end .title -->
            </div> <!-- end .container -->
        </div> <!-- end .inner -->
    </div> <!-- end .page-title -->

    <section class="section white">
        <div class="inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="blog-list">
                            <div class="blog-post">
                                <h4 class="title"><a href="blog-post.html">User Comments List</a></h4>
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Subject</th>
                                        <th>Comment</th>
                                        <th>Status</th>

                                        <th>Car</th>
                                        <th>Created_at</th>
                                        <th>Rate</th>
                                        <th>actions</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for comment in comments %}
                                        <tr>
                                            <td>{{ comment.id }}</td>
                                            <td>{{ comment.subject }}</td>
                                            <td>{{ comment.comment }}</td>
                                            <td>{{ comment.status }}</td>
                                            <td nowrap><a href="{{ path('car_show', {'id': comment.carid}) }}">{{ comment.title }}</a></td>
                                            <td>{{ comment.created_at }}</td>
                                            <td>{{ comment.rate }}</td>

                                            <td>
                                                <a href="" class="btn btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="10">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div> <!-- end .blog-post -->

                        </div> <!-- end .blog-list -->

                    </div> <!-- end .col-sm-9 -->
                    <div class="col-sm-3">
                        <div class="sidebar">
                            <div class="widget">
                                <form class="search-form">
                                    <input type="search" placeholder="search" />
                                    <button type="submit"><i class="fa fa-search"></i></button>
                                </form>
                            </div> <!-- end .widget -->
                            <div class="widget">
                                    {{ include('user/usermenu.html.twig') }}

                            </div> <!-- end .widget -->

                        </div> <!-- end .sidebar -->
                    </div> <!-- end .col-sm-3 -->
                </div>
            </div> <!-- end .container -->
        </div> <!-- end .inner -->
    </section> <!-- end .section -->


{% endblock %}
